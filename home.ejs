      </a>
    </div>
    <hr>
    <div class="cards">
      <div class="row row-cols-1 row-cols-md-4">
      <% for(i in products) { %>
        <div class="col mb-4">
        <div class="card h-100" style="width: 18rem;">
          <img class="card-img-top" alt="product image" src= <%= products[i].image %>>
          <div class="card-body">
            <h5 class="card-title"><%= products[i].name %></h5>
            <h6 class="card-subtitle mb-2 text-muted">â‚¹<%= products[i].price %></h6>
            <p class="card-text"><%=products[i].desc %></p>
            <form method="get" action=<%= "/product/" + products[i]._id %>>
              <button type="submit" name="prdct" class="btn btn-dark" value=<%= products[i].name %> >Buy</button>
            </form>
          </div>
        </div>
      </div>
      <% } %>
    </div>
