<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles.css">
  <title>Homepage</title>
</head>

<body>
  <div class="cntr">
    <header class="blog-header py-3">
      <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col">
          <img class="favicon" src="/logo.svg" alt="logo">
        </div>
        <div class="col-6">
          <form class="form-inline">
            <div class="form-group-lg searchbar edgeR">
              <input type="text" class="form-control-lg searchbarbox edgeR" name="search" placeholder="mens" value"">
            </div>
            <button type="submit" class="btn-lg btn-dark edgeL"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
              </svg>
            </button>
          </form>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
          <button type="submit" name="button" class="btn-lg btn-dark pad">Design</button>
          <button type="submit" name="button" class="btn-lg btn-dark pad">Print</button>
          <button type="submit" name="button" class="btn-lg btn-dark pad">Cart</button>
        </div>
      </div>
    </header>
    <hr>
    <div class="nav-scroller py-1 mb-2">
      <nav class="nav d-flex justify-content-between">
        <a class="p-2 text-muted" href="#">Men</a>
        <a class="p-2 text-muted" href="#">Women</a>
        <a class="p-2 text-muted" href="#">Custom</a>
        <a class="p-2 text-muted" href="#">Design</a>
        <a class="p-2 text-muted" href="#">Culture</a>
        <a class="p-2 text-muted" href="#">Business</a>
        <a class="p-2 text-muted" href="#">Politics</a>
        <a class="p-2 text-muted" href="#">Opinion</a>
        <a class="p-2 text-muted" href="#">Science</a>
        <a class="p-2 text-muted" href="#">Health</a>
        <a class="p-2 text-muted" href="#">Style</a>
        <a class="p-2 text-muted" href="#">Travel</a>
      </nav>
    </div>
    <hr>
    <h1>Cart</h1>
    <hr>
    <% var total=0 %>
    <% for(i in cart) { %>
      <% var subtotal = cart[i].quantity * cart[i].price %>
    <div class="card w-100">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src= <%= cart[i].image %> class="card-img" alt="cartProductImage">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= cart[i].name %></h5>
            <div style="text-align:right">
              <p class="card-text">Quantity: <%= cart[i].quantity %><br>Price: ₹<%= cart[i].price %><br>Subtotal: ₹<%= subtotal %></p>
              <% total+= subtotal%>
            </div>
          </div>
        </div>
      </div>
      </div>
      <div style="height:5px"></div>
      <% } %>
      <hr>
      <div style="text-align:right">
        <h3>Total: ₹<%=total%></h3>
        <form class="" action="/" method="post">
          <input type="submit" name="" class="btn btn-dark" value="Proceed">
        </form>
      </div>










    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</body>

</html>
